{{> nav}}

<div class="container">

    {{#if articles}}

    <div class="row pt-5 pb-3 text-center">
        <div class="col">
            <h1>Saved Articles</h1>
        </div>
    </div>

    <div id="articles">
        {{#each articles}}

        <div class="art row">
            <div class="col-sm-12">


                <h3 data-id={{_id}}>{{title}}</h3>
                <p>{{blurb}}</p>
            </div>

            <div class="col-sm-12">


                <a href={{link}}>View Article</a>
                <button class="btn float-right bg-danger remove-btn" data-id={{_id}}>Remove</button>
                <button class="btn float-right comment-btn" data-id={{_id}}>Comments</button>

            </div>
        </div>

        <div id="comments-{{_id}}" class="comment-area row d-none">

            <div class="col-sm-12">
                <h4 class="text-center">Comments</h4>
                <textarea id="new-comment-{{_id}}" type="text" placeholder="New Comment"></textarea>
                <button class="btn float-right save-comment" data-id={{_id}}>Save</button>
            </div>

            <div class="col-sm-12">

                {{#each comment}}
                <p data-id={{_id}} class="thing"><span class="remove-comment">X</span>{{body}}</p>
                {{/each}}

            </div>

        </div>

        {{/each}}
    </div>

    {{else}}

    <div class="row pt-5 text-center">
        <h1>No articles saved</h1>
    </div>

    {{/if}}

</div>